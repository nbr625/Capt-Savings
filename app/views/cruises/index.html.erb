<div class="container" ng-app="CruiseCenter">
  <h1>cruises</h1>

  <div ng-controller="cruisesController">
    <div class="well">
      <h3>Add a new cruise</h3>
      <form ng-submit="addCruise()">
        <div class="row">
          <div class="col-xs-6">
            <input type="text" ng-model="newCruise.name" class="form-control" placeholder="name" />
          </div>
          <div class="col-xs-6">
            <input type="text" ng-model="newCruise.ship_name" class="form-control" placeholder="ship_name" />
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 text-center">
            <br />
            <input type="Submit" value="Add cruise" class="btn btn-primary" />
          </div>
        </div>
      </form>
    </div>

    <h3>Currently Visiting</h3>
    <hr />
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Reason for Visit</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-show="!cruises.length">
          <td colspan="4">No cruises in the building.</td>
        </tr>
        <tr ng-repeat="cruise in cruises">
          <td>{{ cruise.name }}</td>
          <td>{{ cruise.ship_name }}</td>
          <td><a class="btn btn-danger" ng-click="deleteCruise($index)">Remove</a></td>
        </tr>
      </tbody>
    </table>

  </div>
</div>
